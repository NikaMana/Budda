footer.footer
  .footer-container.container
    .footer__name 
      .footer__copyright 
        .footer__copyright-year 2019
        .footer__hero
          h1.footer__hero-name Вероника Маникина
          .footer__hero-desc Личный сайт веб-разработчика
    .footer__info 
      .footer__navigation
        nav.footer-menu
          ul.main-menu__list
            - var menu = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
            each item in menu
              li.main-menu__item
                a(href='').main-menu__link #{item}
      .footer__socials
        include socials
        +socials('footer')